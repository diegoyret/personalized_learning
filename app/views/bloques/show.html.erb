<div class="page-header">
  <h3>Module #<%= @bloque.id %> <%= @bloque.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Name</dt>
      <dd><%= @bloque.name %></dd>


      <dt>Description</dt>
      <dd><%= @bloque.description %></dd>





    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/bloques" class="btn btn-primary">
        Back
      </a>
      <a href="/bloques/<%= @bloque.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_bloque/<%= @bloque.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>

    </div>
  </div>
</div>
<div class="page-header">
  <h3>These are the Tasks required to finish  Module #<%= @bloque.id %> <%= @bloque.name %></h3>
</div>
<div class="row">

  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Name</th>

        <th>Description</th>

        <th>Graded</th>

        <th>Go to Task</th>
      </tr>

      <% @bloque.tasks.each do |task| %>
      <tr>

        <td><%= task.name %></td>

        <td><%= truncate(task.description) %></td>

        <td><%= task.graded %></td>



        <td>

          <a href="/tasks/<%= task.id %>" class="btn btn-primary">Go to Task</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
