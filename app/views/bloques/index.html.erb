<div class="page-header">
  <h1>
    Syllabus
<% if @user.name=="admin" %>
  <!-- true -->

    <a href="/bloques/new" class="btn btn-lg btn-success">New Module</a>
<% end %>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Module Name</th>

        <th>Description</th>

        <!-- <th>Predecessor</th> -->

        <th>Actions</th>
      </tr>

      <% @bloques.each do |bloque| %>
      <tr>

        <td><%= bloque.id %> - <%= bloque.name %></td>

        <td><%= bloque.description %></td>

        <!-- <td><%#= bloque.predecessor %></td> -->

        <td>

          <a href="/bloques/<%= bloque.id %>" class="btn btn-primary">Show</a>
          <%if @user.name=="admin"  %>
          <a href="/bloques/<%= bloque.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bloque/<%= bloque.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
<% else %>
<% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
