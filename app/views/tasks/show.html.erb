<div class="page-header">
  <h1><%= @task.name %></h1>
  </div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Module</dt>
      <dd><%= @task.bloque.name %> (<%= @task.bloque_id %>)</dd>


      <dt>Description</dt>
      <dd><%= @task.description %></dd>





      <dt>Graded</dt>
      <dd><%= @task.graded %></dd>


      <dt>Predecessor</dt>
      <dd><%= @task.predecessor %></dd>


      <dt>Url</dt>
      <dd><%= @task.url %></dd>


    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/tasks" class="btn btn-primary">
        Back
      </a>
      <a href="/tasks/<%= @task.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_task/<%= @task.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>

    </div>
  </div>
</div>
<% if @submission.errors.any? %>
  <% @submission.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-warning">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Submit "<%= @task.name %>"</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_submission" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for task_id -->

      <div class="form-group">
        <label for="task_id" class="control-label">

        </label>


        <input type="hidden" id="task_id" name="task_id" placeholder="Task" class="form-control" value="<%= @task.id %>">

      </div>



      <!-- Label and input for user_id -->

      <div class="form-group">
        <label for="user_id" class="control-label">

        </label>


        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @user.id %>">

      </div>

      <div class="form-group">
        <label for="content" class="control-label">
        Submission Box
        </label>


        <input type="text" id="content" name="content" placeholder="Comment on the main challenges you encountered and the aproximate time it took you to finish" class="form-control" value="<%= @submission.content %>">

      </div>
      <div class="form-group">
        <label for="content" class="control-label">
        Github URL
        </label>


        <input type="string" id="url" name="url" placeholder="Past the link of your Github pull request" class="form-control" value="<%= @submission.url %>">

      </div>


      <button class="btn btn-success">
        Submit "<%= @task.name %>"
      </button>
      or

      <a href="/submissions/<%= @submission.id %>">Cancel</a>


    </form>

  </div>
</div>
