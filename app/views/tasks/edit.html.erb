      <div class="form-group">
        <label for="external2" class="control-label">
          External Url 2
        </label>


        <input type="text" id="external2" name="external2" placeholder="external2" class="form-control" value="<%= @task.external2 %>">

      </div>

      <button class="btn btn-warning">
        Update Task
      </button>
      or

      <a href="/tasks/<%= @task.id %>">Cancel</a>


    </form>

  </div>
</div>
