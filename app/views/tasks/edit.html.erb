      </div>



      <!-- Label and input for predecessor -->

      <div class="form-group">
        <label for="predecessor" class="control-label">
          Predecessor
        </label>


        <input type="text" id="predecessor" name="predecessor" placeholder="Predecessor" class="form-control" value="<%= @task.predecessor %>">

      </div>



      <!-- Label and input for url -->

      <div class="form-group">
        <label for="url" class="control-label">
          Url
        </label>


        <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="<%= @task.url %>">

      </div>
      <div class="form-group">
        <label for="video_url" class="control-label">
          Video Url
