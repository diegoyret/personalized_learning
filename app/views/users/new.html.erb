<!-- Validation failure messages -->
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_user" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for email -->

      <div class="form-group">
        <label for="email" class="control-label">
          Email
        </label>


        <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @user.email %>">

      </div>



      <!-- Label and input for name -->

      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>


        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @user.name %>">

      </div>



      <!-- Label and input for photo_url -->

      <div class="form-group">
        <label for="photo_url" class="control-label">
          Photo url
        </label>


        <input type="text" id="photo_url" name="photo_url" placeholder="Photo url" class="form-control" value="<%= @user.photo_url %>">

      </div>
      <div class="form-group">
        <label for="password" class="control-label">
          Password
        </label>


        <input type="string" id="encrypted_password" name="encrypted_password" placeholder="password" class="form-control" value="<%= @user.encrypted_password %>">

      </div>



      <button class="btn btn-success">
        Create User
      </button>
      or
      <a href="/users">Cancel</a>

    </form>

  </div>
</div>
